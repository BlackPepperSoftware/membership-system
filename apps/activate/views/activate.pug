extends ../../../src/views/base.pug

block prepend title
	- title = app.title
	- heading = title

block contents
	p Before you can activate your account, please enter your password.
	form( method="post" action="/activate" )
		p
			label( for="activation_code" ) Activation code:
			input( name="activation_code", type="text", value=activation_code, ( activation_code ? readonly : null ) )#activation_code.form-control
		p
			label( for="password" ) Password:
			input( name="password", type="password" )#password.form-control
		p
			button.btn.btn-primary Activate
				span.glyphicon.glyphicon-chevron-right
