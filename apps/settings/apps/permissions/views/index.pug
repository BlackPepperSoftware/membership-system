extends ../../../../../src/views/base.pug

block prepend title
	- title = app.title
	- heading = title
	- activeApp = 'settings'

block contents
	if access == 'superadmin'
		p: a( href="/settings/permissions/create" ).btn.btn-default
			span.glyphicon.glyphicon-plus
			|  Create Permission
	table.table.table-striped.table-condensed
		thead
			tr
				th Name
				th Slug
				th Description
				th Discourse Group
				th Restricted
				th Edit
		tbody
			each permission, p in permissions
				tr
					td #{ permission.name }
					td #{ permission.slug }
					td #{ permission.description }
					td
						if permission.group.id && permission.group.name
							| Linked
						else
							| â€“
					td
						if permission.superadmin_only
							| Super Admin
						else
							| Admin
					td: a( href="/settings/permissions/" + permission.slug + "/edit" )
						span.glyphicon.glyphicon-pencil
