extends /src/views/base.pug

block prepend title
	- title = 'Reset Password'
	- heading = title

block navbar

block append js
	script( src="/js/password-requirements.js" )

block append css
	link( rel="stylesheet", href="/css/password-requirements.css" )

block contents
	form( method="post", action="/password-reset/change-password" ).form-horizontal
		+csrf
		.form-group
			label( for="password_reset_code" ).col-md-2.control-label Reset code
			.col-md-4
				input( name="password_reset_code", type="text", value=password_reset_code readonly=( password_reset_code ) )#password_reset_code.form-control
		.form-group
			label( for="password" ).col-md-2.control-label Password
			.col-md-4
				input( type="password", name="password", required )#password.form-control.pw-req
		.form-group
			label( for="verify" ).col-md-2.control-label Verify
			.col-md-4
				input( type="password", name="verify", required )#verify.form-control.pw-mat
		.form-group
			.col-md-4.col-md-offset-2
				button.btn.btn-primary Change Password
