extends /src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'permissions'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			.page-header
				h3 #{ title }
			.list-group
				if permissions.length
					each permission, p in permissions
						include /src/views/partials/permission.pug
				else
					p You currently haven't been granted any permissions.
