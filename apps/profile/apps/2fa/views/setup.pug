extends ../../../../../src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'otp'
			include ../../../views/partials/sidebar.pug
		.col-md-9
			.page-header
				h3 #{ title }
			img( src=qr, title=secret )
			p #{ secret }
			.page-header
				h3 Verify
			form( method="post" ).form-horizontal
				include ../../../../../src/views/partials/csrf.pug	
					input( type='hidden', value=secret, name='secret' )
				.form-group
					label( for=code ).control-label.col-md-2 Code
					.col-md-3
						input( type='text', name='code' ).form-control#code
				.col-md-offset-2.col-md-10
					.form-group
						button.btn.btn-primary Yes, activate
						|  
						a( href="/profile/2fa" ).btn.btn-default Cancel
