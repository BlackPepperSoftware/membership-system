extends ../../../src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'home'
			include partials/sidebar.pug
		.col-md-2
			img( style="border-radius: 100%", src=user.gravatar + "?s=150&d=mm&r=g" )
		.col-md-7
			.page-header
				h3 Hello #{ user.firstname }...
			dl
				dt Name
				dd( style="margin-bottom: 1em;" ) #{ user.fullname }
				dt Email
				dd( style="margin-bottom: 1em;" ) #{ user.email }
				dt Address
				dd #{ user.address.replace( /\r\n/g, ", " ) }
