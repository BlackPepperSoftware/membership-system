extends ../../../src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'home'
			include partials/sidebar.pug
		.col-md-2
			img( style="border-radius: 100%", src=user.gravatar + "?s=150&d=mm&r=g" )
		.col-md-7
			.page-header
				h3 Hello #{ user.firstname }!
			dl
				dt Joined
				dd( style="margin-bottom: 1em;" ) #{ moment( user.joined ).fromNow() }
				if count != undefined && count[0] != undefined && count[0].count != undefined
					dt Visits this month
					dd( style="margin-bottom: 1em;" ) #{ count[0].count }
				if membership_expires != undefined
					dt Membership
					dd Renews #{ moment( membership_expires ).fromNow() }
