extends ../../../src/views/base.pug

block prepend title
	- title = "Profile"

block contents
	.row
		.col-md-3
			- page = 'profile'
			include partials/sidebar.pug
		.col-md-9
			.page-header
				h3 Edit Profile
			form( method="post" ).form-horizontal
				.form-group
					label( for="email" ).col-md-3 Email
					.col-md-5
						input( type="email", value=user.email, name="email", required, disabled )#email.form-control
						span.help-block This can only be changed by an administrator.
				hr
				.form-group
					label( for="firstname" ).col-md-3 First Name
					.col-md-5
						input( type="text", value=user.firstname, name="firstname", required )#firstname.form-control
				.form-group
					label( for="lastname" ).col-md-3 Last Name
					.col-md-5
						input( type="text", value=user.lastname, name="lastname", required )#lastname.form-control
				.form-group
					label( for="address" ).col-md-3 Address
					.col-md-5
						textarea( rows="4", name="address", required )#address.form-control #{ user.address }
				.form-group
					.col-md-5.col-md-offset-3
						button.btn.btn-primary Update
