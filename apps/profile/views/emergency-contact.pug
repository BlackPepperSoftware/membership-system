extends ../../../src/views/base.pug

block prepend title
	- title = "Emergency Contact"

block contents
	.row
		.col-md-3
			- page = 'emergency-contact'
			include partials/sidebar.pug
		.col-md-9
			.page-header
				h3 Emergency Contact
			form( method="post" ).form-horizontal
				include ../../../src/views/partials/csrf.pug
				.form-group
					label( for="firstname" ).col-md-3.control-label First Name
					.col-md-5
						input( type="text", value=user.emergency_contact.firstname, name="firstname" )#firstname.form-control
				.form-group
					label( for="lastname" ).col-md-3.control-label Last Name
					.col-md-5
						input( type="text", value=user.emergency_contact.lastname, name="lastname" )#lastname.form-control
				.form-group
					label( for="telephone" ).col-md-3.control-label Telephone
					.col-md-5
						input( type="text", value=user.emergency_contact.telephone, name="telephone" )#telephone.form-control
				.form-group
					.col-md-5.col-md-offset-3
						button.btn.btn-primary Update
