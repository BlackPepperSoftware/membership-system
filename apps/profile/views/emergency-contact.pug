extends ../../../src/views/base.pug

block prepend title
	- title = "Emergency Contact"
	- heading = title

block contents
	form( method="post" ).form-horizontal
		.form-group
			label( for="firstname" ).col-md-2 First Name
			.col-md-4
				input( type="text", value=user.emergency_contact.firstname, name="firstname" )#firstname.form-control
		.form-group
			label( for="lastname" ).col-md-2 Last Name
			.col-md-4
				input( type="text", value=user.emergency_contact.lastname, name="lastname" )#lastname.form-control
		.form-group
			label( for="telephone" ).col-md-2 Telephone
			.col-md-4
				input( type="text", value=user.emergency_contact.telephone, name="telephone" )#telephone.form-control
		.form-group
			.col-md-4.col-md-offset-2
				button.btn.btn-primary Update
