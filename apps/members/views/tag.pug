extends /src/views/base.pug

block prepend title
	- title = 'Tag'
	- page = 'tag'

block contents
	.row
		.col-md-3
			include partials/sidebar.pug
		.col-md-9
			.page-header
				h3 #{ title }
			form( method="post" ).form-horizontal
				+csrf
				.form-group
					label( for="tag" ).col-md-2 ID
					.col-md-4
						input( type="tag", value=member.tag.id, name="tag", minlength=8, maxlength=8 )#tag.form-control
				.form-group
					.col-md-4.col-md-offset-2
						button.btn.btn-primary Update
