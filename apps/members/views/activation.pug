extends ../../../src/views/base.pug

block prepend title
	- title = 'Activation'
	- heading = title
	- activeApp = 'members'

block contents
	form( method="post" ).form-horizontal
		include ../../../src/views/partials/csrf.pug
		.form-group
			.col-md-12
				if member.activated
					input( type="hidden", name="activated", value="" )
					p Are you sure you want to deactivate this members account?
					button.btn.btn-danger Yes, deactivate account
				else
					input( type="hidden", name="activated", value="true" )
					p Are you sure you want to activate this members account?
					button.btn.btn-primary Yes, activate account
