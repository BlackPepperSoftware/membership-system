doctype html
html
	head
		meta( charset="utf-8" )
		link( rel="shortcut icon" href="/imgs/favicon.ico" )
		block title
			if title
				title #{ title } &mdash; #{ config.title } &mdash; #{ config.organisation }
			else
				title #{ config.title } &mdash; #{ config.organisation }
		block head
			block css
				link( rel="stylesheet", href="/css/bootstrap.min.css" )
				link( rel="stylesheet", href="/css/style.css" )
			block js
				script( src="/js/jquery.js" )
				script( src="/js/bootstrap.js" )
				script( src="/js/script.js" )
	body
		block body
			.container
				a( href="/" )
					img.logo( src="/imgs/logo.png" )
				block navbar
					include partials/navbar.pug
				include partials/breadcrumb.pug
				include partials/flash.pug
				block heading
					if heading
						.page-header
							h2 #{ heading }
				block contents
